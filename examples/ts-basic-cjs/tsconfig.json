{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "#/*": ["./src/*"],
      "#prisma/client": ["./prisma/client"]
    }
  },
  "include": ["src/**/*", "prisma/client/**/*"]
}
