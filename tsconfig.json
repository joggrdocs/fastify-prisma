{
  "ts-node": {
    "files": true
  },
  "compilerOptions": {
    "incremental": true,
    "module": "commonjs",
    "strict": true,
    "target": "ES2022",
    "strictNullChecks": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "lib": ["ES2022"],
    "outDir": "./dist",
    "baseUrl": "."
  },
  "typeRoots": ["node_modules/@types", "types"],
  "include": ["types/**/*", "src/**/*"],
  "exclude": ["node_modules/**/*", "**/__tests__/**/*", "tests", "action.js"]
}
